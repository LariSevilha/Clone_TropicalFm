<% if @contact.present? && @contact.errors.present? %>
  <div class="container">
    <div class="row justify-content-center my-3">
      <% @contact.errors.full_messages.each do |erro| %>
        <div class="col-12 col-md-4 pt-3">
          <div id="message" class="alert alert-danger fade in show">
            <%= erro %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <%= render 'form' %>
  </div>
</div>

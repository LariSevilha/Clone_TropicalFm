<% if @videos.present? %>
  <div class="row">
    <% @videos.each do |video| %>
      <div class="col-sm-6 col-md-6 my-3">
        <div class="p-0 card h-100">
          <div class="view overlay">
            <%= link_to videos_path(video.slug) do %>     
              <% if video.image.present? %>
                <%= image_tag video.image, class: "card-img-top", alt: video.title %>
              <% else %>
                <%= image_tag 'logo.png'%>
              <% end %>
            <% end %>   
          </div>
          <div class="card-body">
            <a class="activator waves-effect waves-light mr-4"></a>
            <h4 class="card-title">
              <%= link_to video.title, videos_path(video), class: "black-text" %>
            </h4>
            <hr>
            <%= link_to videos_path(video), class: "text-primary d-flex justify-content-end align-items-center" do %>
              <h5 class="m-0">Ver mais  <i class="fas fa-angle-double-right"></i></h5>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div>
    <h6>
      Sinto muito, o album est√° vazio!
    </h6>
  </div>
<% end %>
